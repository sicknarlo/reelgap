<div class="hidden movie-id"><%= @movie.id %>
</div>
<div class="row">
  <div class="col-xs-12">
    <div class="text-center"><img src="<%= @movie.poster %>"></div>
    <div class="col-lg-12 text-center">
      <h3><%= @movie.title %> <span class="text-muted"><%= @movie.year %></span></h3>
      <div class="col-xs-6 text-center">
      <h2>Metascore</h2>
        <h4><%= @movie.metascore %></h4>
      </div>
      <div class="col-xs-6 text-center">
      <h2>IMDB Rating</h2>
        <h4><%= @movie.imdb_rating %></h4>
      </div>
    </div>
  </div>
</div>

